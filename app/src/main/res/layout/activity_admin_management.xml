<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".AdminManagement">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="20dp"
        android:text="Category Classifications"
        android:textSize="24dp"
        android:textStyle="bold"
        android:textColor="@color/mainColor"
        android:gravity="center"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="40dp"
        android:orientation="vertical"
        android:gravity="center_horizontal">
    <Button
        android:id="@+id/btn_customerLists"
        android:layout_width="280dp"
        android:layout_height="70dp"
        android:layout_marginVertical="5dp"
        android:text="Customer List"
        android:textSize="24dp"/>
    <Button
        android:id="@+id/btn_supplierLists"
        android:layout_width="280dp"
        android:layout_height="70dp"
        android:layout_marginVertical="5dp"
        android:text="Supplier List"
        android:textSize="24dp"/>
    <Button
        android:id="@+id/btn_activityLists"
        android:layout_width="280dp"
        android:layout_height="70dp"
        android:layout_marginVertical="5dp"
        android:text="Activity List"
        android:textSize="24dp"/>
    </LinearLayout>

</LinearLayout>