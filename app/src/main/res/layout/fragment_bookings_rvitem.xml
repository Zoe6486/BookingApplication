<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".ui.bookings.BookingsFragment">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="12dp"
            android:layout_marginVertical="8dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="10dp">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="20dp"
            android:paddingVertical="15dp"
            android:stretchColumns="*">

            <TableRow android:layout_marginBottom="5dp">

                <TextView
                    android:id="@+id/tv_serviceName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Venosa - Dinner"
                    android:textColor="@color/black"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/tv_serviceCategory"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:text="Restaurant"
                    android:textColor="@color/grey"
                    android:textSize="16dp" />
            </TableRow>

            <TableRow android:layout_marginTop="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Start Date:"
                    android:textColor="@color/grey"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/tv_startDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:text="31/08/2023"
                    android:textColor="@color/black"
                    android:textSize="16dp" />
            </TableRow>

            <TableRow android:layout_marginTop="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Start Time:"
                    android:textColor="@color/grey"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/tv_startTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:text="4:00 pm"
                    android:textColor="@color/black"
                    android:textSize="16dp" />
            </TableRow>

            <TableRow android:layout_marginTop="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Paid:"
                    android:textColor="@color/grey"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/tv_paid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:text="$120"
                    android:textColor="@color/black"
                    android:textSize="16dp" />
            </TableRow>



            <TableRow android:layout_marginTop="10dp">

                <LinearLayout android:gravity="left">

                    <Button
                        android:layout_width="140dp"
                        android:layout_height="wrap_content"
                        android:text="Redeem"
                        android:textColor="@color/white"
                        android:textSize="18dp" />
                </LinearLayout>


                <LinearLayout android:gravity="right">

                    <Button
                        android:layout_width="140dp"
                        android:layout_height="wrap_content"
                        android:text="Details"
                        android:textColor="@color/white"
                        android:textSize="18dp" />
                </LinearLayout>
            </TableRow>

        </TableLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>